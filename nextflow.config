profiles {

  //--------------------------------------------------------------------------------------------
  // processSingleExperiment
  //--------------------------------------------------------------------------------------------

  processSingleExperiment {

    params {
      input = "$baseDir/data/runaccessions.tsv"
      //input = "$baseDir/data/haploid_paired/chr1/"
      fromBAM = false
      local = false
      hisat2Threads = 4
      isPaired = true
      minCoverage = 5
      genomeFastaFile = "$baseDir/data/genome_haploid/genome.fasta"
      gtfFile = "$baseDir/data/cnvInputFiles_haploid/genes.gtf"
      footprintFile = "$baseDir/data/cnvInputFiles_haploid/geneFootprints.txt"
      winLen = 1000
      ploidy=1
      //hisat2Index = "$baseDir/data/genome_haploid_index/premade_index";
      hisat2Index = "NA";
      createIndex = true
      outputDir = "$launchDir/output"
      trimmomaticAdaptorsFile = "NA"
      varscanPValue = 0.01
      varscanMinVarFreqSnp = 0.8
      varscanMinVarFreqCons = 0.8
      maxNumberOfReads = 200000
      ebiFtpUser = ''
      ebiFtpPassword = ''
      organismAbbrev = ''
      taxonId = "1577702"
      geneSourceIdOrthologFile = "$baseDir/data/geneOrtholog.tsv"
      chrsForCalcFile = "$baseDir/data/chrsForCalcFile.tsv"
    }

    docker {
      enabled = true
      runOptions = '--user root'
    }

  }

  //--------------------------------------------------------------------------------------------
  // mergeExperiments
  //--------------------------------------------------------------------------------------------

  mergeExperiments {

    params {
      inputDir = "$launchDir/output/"
      outputDir = "$launchDir/results/"
      cacheFile = "$launchDir/data/merge_setup/cache.txt"
      cacheFileDir = "$launchDir/data/merge_setup/"
      undoneStrains = "$launchDir/data/merge_setup/undoneStrains.txt"
      undoneStrainsDir = "$launchDir/data/merge_setup/"
      organism_abbrev = 'lmajFriedlin' 
      reference_strain = 'Friedlin'
      varscanFilePath = "$launchDir/output/varscanCons/"
      varscan_directory = "$launchDir/varscanCons/"
      genomeFastaFile = "$launchDir/data/genome_diploid/chr1/genome.fa"
      gtfFile = "$launchDir/data/cnvInputFiles_diploid/lmajF_chr1.gtf"
      webServicesDir = "$launchDir/webservices"
      extDbRlsSpec = '"lmajFriedlin_NGS_SNPsAndVariations|do_not_care"'
      gusConfig = "$launchDir/data/merge_setup/gusConfig.txt"
    }

   docker {
      enabled = true
    }

  }

  //--------------------------------------------------------------------------------------------
  // tests
  //--------------------------------------------------------------------------------------------

  tests {

    params {
      testDir = '$baseDir/testing/t/'
      outputDir = '$baseDir/output/'
    }

    docker {
      enabled = true
    }

  }
  
}