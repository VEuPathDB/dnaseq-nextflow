params {
//  inputDir = "$baseDir/data/bam_paired_haploid"
//  fromBAM = true

  inputDir = "$baseDir/data/bam_test"
  fromBAM = true
  hisat2Threads = 4
  isPaired = true

  genomeFastaFile = "$baseDir/data/genome_haploid/genome.fa"

  // there will be many files here.  
  //hisat2Index = "$baseDir/data/genome_haploid_index/premade_index";
  createIndex = true

  outputDir = "/home/jbrestel/tmp/dnaseqAnalysis"

  trimmomaticAdaptorsFile = "$baseDir/data/trimmomatic_adaptors/All_adaptors-PE.fa"

  varscanPValue = 0.01
  varscanMinCoverage = 5
  varscanMinVarFreqSnp = 0.8
  varscanMinVarFreqCons = 0.8

  gatkJar = "NA"
  picardJar = "NA"
  varscanJar = "NA"

}

process {
    withName:fastqc {
        container = 'biocontainers/fastqc:v0.11.9_cv7'
    }
    withName:fastqc_check {
        container = 'veupathdb/shortreadaligner'
    }

    withName:trimmomatic {
        container = 'veupathdb/shortreadaligner'
    }
    withName:hisat2Index {
        container = 'veupathdb/shortreadaligner'
    }
    withName:hisat2 {
        container = 'veupathdb/shortreadaligner'
    }
    withName:gatk {
        container = 'broadinstitute/gatk3:3.8-1'
    }
    withName:mpileup {
        container = 'veupathdb/shortreadaligner'
    }
    withName:varscan {
        container = 'veupathdb/dnaseqanalysis'
    }
    withName:picard {
        container = 'broadinstitute/picard:2.25.0'
    }
    withName:bcftools {
        container = 'biocontainers/bcftools:v1.9-1-deb_cv1'
    }

    withName:bedtools {
        container = 'biocontainers/bedtools:v2.27.1dfsg-4-deb_cv1'
    }
    withName:bedGraphToBigWig {
        container = 'veupathdb/bedgraphtobigwig'
    }
}
docker {
    enabled = true
}
singularity {
    enabled = false
}
