params {
  inputDir = "$baseDir/data/diploid_paired/chr1"
  fromBAM = true
  hisat2Threads = 4
  isPaired = true

  genomeFastaFile = "$baseDir/data/genome_diploid/chr1/genome.fa"
  gtfFile = "$baseDir/data/cnvInputFiles_diploid/lmajF_chr1.gtf"
  geneFootprintFile = "$baseDir/data/cnvInputFiles_diploid/lmajF_geneFootprints_chr1.txt"
  winLen = 1000
  ploidy=2

  // there will be many files here.  
  //hisat2Index = "$baseDir/data/genome_haploid_index/premade_index";
  hisat2Index = "NA";
  createIndex = true

  outputDir = "/home/kathryn/dnaseqAnalysis/output"

  trimmomaticAdaptorsFile = "$baseDir/data/trimmomatic_adaptors/All_adaptors-PE.fa"

  varscanPValue = 0.01
  varscanMinCoverage = 5
  //TODO check settings for these in existing workflow
  varscanMinVarFreqSnp = 0.3
  varscanMinVarFreqCons = 0.3

  gatkJar = "NA"
  picardJar = "NA"
  varscanJar = "NA"

}

process {
    withName:fastqc {
        container = 'biocontainers/fastqc:v0.11.9_cv7'
    }
    withName:fastqc_check {
        container = 'veupathdb/shortreadaligner'
    }
    withName:trimmomatic {
        container = 'veupathdb/shortreadaligner'
    }
    withName:hisat2Index {
        container = 'veupathdb/shortreadaligner'
    }
    withName:hisat2 {
        container = 'veupathdb/shortreadaligner'
    }
    withName:gatk {
        container = 'broadinstitute/gatk3:3.8-1'
    }
    withName:mpileup {
        container = 'veupathdb/shortreadaligner'
    }
    withName:varscan {
        container = 'veupathdb/dnaseqanalysis'
    }
    withName:picard {
        container = 'broadinstitute/picard:2.25.0'
    }
    withName:bcftoolsConsensus {
        container = 'biocontainers/bcftools:v1.9-1-deb_cv1'
    }
    withName:concatSnpsAndIndels {
        container = 'biocontainers/bcftools:v1.9-1-deb_cv1'
    }
    withName:mergeVcfs {
        container = 'biocontainers/bcftools:v1.9-1-deb_cv1'
    }
    withName:genomecov {
        container = 'biocontainers/bedtools:v2.27.1dfsg-4-deb_cv1'
    }
    withName:bedGraphToBigWig {
        container = 'veupathdb/shortreadaligner'
    }
    withName:makeCombinedVarscanIndex {
        container = 'veupathdb/dnaseqanalysis'
    }
    withName:makeMergedVarscanIndex {
        container = 'veupathdb/dnaseqanalysis'
    }
    withName:sortForCounting {
        container = 'veupathdb/shortreadaligner'
    }
    withName:htseqCount {
        container = 'biocontainers/htseq:v0.11.2-1-deb-py3_cv1'
    }
    withName:calculateTPM {
        container = 'veupathdb/shortreadaligner'
    }
    withName:makeWindowFile {
        container = 'veupathdb/shortreadaligner'
    }
    withName:bedtoolsWindowed {
        container = 'biocontainers/bedtools:v2.27.1dfsg-4-deb_cv1'
    }
    withName:normaliseCoverage {
        container = 'veupathdb/shortreadaligner'
    }
    withName:makeSnpDensity {
        container= 'biocontainers/bedtools:v2.27.1dfsg-4-deb_cv1'
    }
    withName:makeDensityBigwigs {
        container = 'veupathdb/shortreadaligner'
    }
    withName:getHeterozygousSNPs {
        container = 'veupathdb/vcf_parser_cnv'
    }
    withName:makeHeterozygousDensityBed {
        container = 'biocontainers/bedtools:v2.27.1dfsg-4-deb_cv1'
    }
    withName:makeHeterozygousDensityBigwig {
        container = 'veupathdb/shortreadaligner'
    }
}
docker {
    enabled = true
}
singularity {
    enabled = false
}
